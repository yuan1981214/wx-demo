<view>
    <!-- 顶部图片 -->
    <view class="top-image">
        <image src="../../imgs/index_02.jpg"></image>
    </view>
    <!-- 类别名称 -->
    <view class="top-type">
        <view bindtap="gettype">
            <image src="../../imgs/index_05.jpg"></image>
            <text>菜谱分类</text>
        </view>
        <block wx:for="{{ types }}">
            <view>
                <image src="{{ item.src }}"></image>
                <text>{{ item.typename }}</text>
            </view>
        </block>
        <view>
            <image src="../../imgs/index_11.jpg"></image>
            <text>关注菜谱</text>
        </view>
    </view>

    <!-- 热门菜谱 -->
    <view class="hot-recipe">
        <view class="hot-recipe-title">
            <image src="../../imgs/index_18.jpg"></image>
            <text>热门菜谱</text>
        </view>
        <!-- 菜谱列表 -->
        <view class="hot-recipe-list">
            <block wx:for="{{ recipes }}">
                <view class="hot-recipe-list-item" data-id="{{item._id}}" bindtap="getdesc">
                    <!-- 图片 -->
                    <image src="{{ item.filesIdArray[0] }}"></image>
                    <!-- 名字 -->
                    <view class="hot-recipe-list-item-title">{{ item.recipename }}</view>
                    <!-- 发布人及浏览次数 -->
                    <view class="hot-recipe-list-item-info">
                        <view class="left">
                            <image  src="{{item.userinfo.avatarUrl}}"></image>
                            <text>{{item.userinfo.nickName}}</text>
                        </view>
                        <view class="right">
                            <image src="../../imgs/airs.png"></image>
                            <text>{{item.visiter}}</text>
                        </view>
                    </view>
                </view>
            </block>

        </view>
    </view>
</view>